<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WondersOfOmetepe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor"> @color/dark_green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Md">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Sm">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Style_EditTextInput" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:layout_marginEnd">44dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/dark_turquoise</item>
        <item name="drawableTint">@color/dark_green</item>
    </style>

    <style name="Style_InputName" parent="Style_EditTextInput">
        <item name="android:hint">@string/name</item>
        <item name="android:drawableStart">@drawable/icon_person</item>
    </style>

    <style name="InputPhoneNumer" parent="Style_EditTextInput">
        <item name="android:drawableStart">@drawable/icon_contact_phone</item>
        <item name="android:hint">@string/phone_number</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="InputPassword" parent="Style_EditTextInput">
        <item name="android:drawableStart">@drawable/icon_lock</item>
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="PrimaryButton" parent="Button">
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="SecondaryButton" parent="Button">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="CardViewItem">
        <item name="android:animateLayoutChanges">true</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardViewListItem" parent="CardViewItem">
        <item name="contentPadding">8dp</item>
    </style>

    <style name="CardView_InputEditText" >
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">20</item>
    </style>

    <style name="ButtonNavigationMain" >

        <item name="background">@color/grey</item>
        <item name="itemIconTint">@color/light_green</item>
        <item name="itemTextColor">@color/black</item>
    </style>
</resources>